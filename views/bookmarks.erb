
<ul>
  <% @bookmarks.each do |bookmark| %>
    <li> 
      <a href="<%= bookmark.url %>">
      <%= bookmark.title %> 
    </li>
  <% end %>
</ul>

<form action="bookmarks/add" method="post"> 
  <label for="url">Enter URL</label>
  <input type="text" name="url" required>
  <label for="title">Title:</label>
  <input type="text" name="title" required>
  <button>Add</button>
</form>

<%= flash[:notice] %>